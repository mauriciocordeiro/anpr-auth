{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "cateye-alpr:1.0",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"ports": [
					{ "hostPort": 5000, "containerPort": 5000 },
					{ "hostPort": 5556, "containerPort": 5556 }
				]
			},
			"python": {
				"file": "server.py"
			}
		}
	]
}